
{
  "name": "Module 7: ENG 298 (FA 25): Module 7: Pre-Class Lab Prep: Introduction to GitHub and Codespaces",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "postCreateCommand": "chmod +x .devcontainer/setup_tools.sh && .devcontainer/setup_tools.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "github.vscode-github-actions"
      ],
      "settings": {
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true
      }
    }
  },

  "remoteUser": "vscode",

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "16gb"
  }
}
